[Unit]
Description=Daphne ASGI Server for Django Oscar Fast Delivery
After=network.target

[Service]
Type=simple
User=root
Group=www-data
WorkingDirectory=/opt/fast-delievery-food
Environment=PATH=/opt/fast-delievery-food/venv/bin
ExecStart=/opt/fast-delievery-food/venv/bin/daphne -b 127.0.0.1 -p 8000 asgi:application
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
